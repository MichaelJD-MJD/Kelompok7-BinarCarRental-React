    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": ["<node_internals>/**"],
            "program": "${workspaceFolder}\\src\\routes\\manufactures.routes.js"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Cars API",
            "skipFiles": ["<node_internals>/**"],
            "cwd": "${workspaceFolder}/BE",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run-script", "dev"]
        },
        {
            "name": "React - Chrome",
            "request": "launch",
            "type": "chrome",
            "url": "http://localhost:5173",
            "webRoot": "${workspaceFolder}/FE"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "React - Vite",
            "skipFiles": ["<node_internals>/**"],
            "cwd": "${workspaceFolder}/FE",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "dev"] // Corrected this line
        }
    ]
}
